{
  "name": "memran/php-testify",
  "description": "A modern, expressive testing library for PHP that makes writing tests enjoyable and readable.",
  "type": "library",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "phpunit/phpunit": "^9.0|| ^10.0"
  },
  "autoload": {
    "psr-4": {
      "Testify\\": "src/"
    },
    "files": [
      "src/globals.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "php tests/run.php",
    "test:quick": "php tests/run.php",
    "test:config": "php -r 'print_r(require \"phpunit.config.php\");'",
    "test:coverage": "vendor/bin/phpunit --coverage-html coverage",
    "test:unit": "php tests/run.php",
    "test:feature": "php tests/run.php",
    "test:watch": "find src tests -name \"*.php\" | entr -c composer test:quick",
    "test:all": [
      "@test:unit",
      "@test:feature"
    ]
  },
  "scripts-descriptions": {
    "test": "Run all test suites using PHP-Testify",
    "test:quick": "Run tests quickly using PHP-Testify",
    "test:config": "Show current test configuration",
    "test:coverage": "Generate coverage report (requires PHPUnit)",
    "test:unit": "Run unit tests",
    "test:feature": "Run feature tests",
    "test:watch": "Watch for file changes and run tests automatically",
    "test:all": "Run all test types sequentially"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
