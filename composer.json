{
  "name": "memran/php-testify",
  "description": "A modern, expressive testing library for PHP that makes writing tests enjoyable and readable.",
  "type": "library",
  "authors": [
    {
      "name": "Mohammad Emran",
      "email": "memran.dhk@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "phpunit/phpunit": " ^11.0"
  },
  "autoload": {
    "psr-4": {
      "Testify\\": "src/"
    },
    "files": [
      "src/testify.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "php bin/testify"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
